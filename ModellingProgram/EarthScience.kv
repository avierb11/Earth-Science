<BlueLabel@Label>:
    canvas.before:
        Color:
            rgba: .2,.4,.7,1
        Rectangle:
            pos: self.pos
            size: self.size

<OrangeCanvas@BoxLayout>:
    canvas.before:
        Color:
            rgba: .988, .78, .467, 1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'horizontal'

<GreenCanvas@BoxLayout>:
    canvas.before:
        Color:
            rgba: .271, .471, .255, 1
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'vertical'

<GreenLabel@Label>:
    canvas:
        Color:
            rgba: .271, .471, .255, 1

<BrownLabel@Label>:
    canvas.before:
        Color:
            rgba: .361, .251, .075, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20,]
    text_size: self.width, None
    font_size: 36
    halign: 'center'
    valign: 'middle'

<MenuScreen>:
    BoxLayout:
        orientation: 'horizontal'

        GreenCanvas:
            size_hint: .6, 1
            orientation: 'vertical'
            padding: 10
            spacing: 10

            BrownLabel:
                text: 'This is the menu screen'
                font_size: 36

            BrownLabel:
                text: "A project by Andrew Vierbicher"


        GreenCanvas:
            size_hint: .4, 1
            orientation: 'vertical'
            padding: 10
            spacing: 10

            Button:
                text: 'To value screen'
                font_size: 36
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'value'
            Button:
                text: 'To map screen'
                font_size: 36
                on_release:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'map'
            Button:
                text: 'Third Button'
                font_size: 36

<ValueScreen>:
    Button:
        size_hint: .1, .1
        text: '<='
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'This is the value screen'
            font_size: 36

<MapScreen>:
    Button:
        size_hint: .1, .1
        text: '<='
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        BoxLayout:
            size_hint: 1, .7
            id: figureBoxLayout

        Label:
            size_hint: 1,.3
            font_size: 36

            text: 'This is the label under the plot'
