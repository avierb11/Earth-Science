#: import Factory kivy.factory.Factory

<ParameterLabel@Label>:
    font_size: 18
    text_size: self.size

<ParameterInput@TextInput>:
    halign: 'center'

ScreenManagement:
    TitleScreen:
    AquiferModelling:
    GraphScreen:
    RiverEvolution:

<TitleScreen>:
    id: title_screen
    name: 'title_screen'
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Title text'
            font_size: 32

        Button:
            text: 'Aquifer modelling'
            font_size: 32
            on_release:
                app.root.current = 'aquifer_modelling'
                root.manager.transition.direction = 'left'

        Button:
            text: 'River evolution'
            font_size: 32
            on_release:
                app.root.current = 'river_evolution'

        Button:
            text: 'Graph screen'
            font_size: 32
            on_release:
                app.root.current = 'graph_screen'
                root.manager.transition.direction = 'left'

<AquiferModelling>:
    id: aquifer_modelling
    name: 'aquifer_modelling'

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: False
            ActionPrevious:
                title: 'Example App'
                with_previous: False
            ActionButton:
                text: 'File'
            ActionButton:
                text: 'Edit'
            ActionGroup:
                text: 'Tools'
                mode: 'spinner'
                ActionButton:
                    text: 'Dimensions'
                ActionButton:
                    text: 'Time'
                ActionButton:
                    text: 'k'
                ActionButton:
                    text: 'Ss'


        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                size_hint: .75, 1

            BoxLayout:
                size_hint: .25, 1
                orientation: 'vertical'

                Button:
                    text: '1'

                Button:
                    text: '2'

                Button:
                    text: '3'

                Button:
                    text: '4'


<GraphScreen>:
    name: 'graph_screen'

    StackLayout:
        Button:
            size_hint: .1, .1
            text: '<-'
            on_release:
                app.root.current = 'title_screen'

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Graph'
            font_size: 32
            size_hint: 1, .2

        BoxLayout:
            orientation: 'horizontal'

            Figure:
                size_hint: .8, 1

            BoxLayout:
                orientation: 'vertical'
                size_hint: .2, 1

                Button:
                    text: '1'

                Button:
                    text: '2'

                Button:
                    text: '3'

<RiverEvolution>:
    name: 'river_evolution'
    id: river_evolution

    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: False
            ActionPrevious:
                title: 'Example App'
                with_previous: False
            ActionButton:
                text: 'File'
            ActionButton:
                text: 'Edit'
            ActionGroup:
                text: 'Tools'
                mode: 'spinner'
                ActionButton:
                    text: 'Tool1'
                ActionButton:
                    text: 'Tool2'
                ActionButton:
                    text: 'Tool3'
                ActionButton:
                    text: 'Tool4'
